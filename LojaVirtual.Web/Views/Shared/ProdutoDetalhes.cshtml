@model LojaVirtual.Entidade.Produto

<div class="well">
    <h3><strong>@Model.ds_Produto</strong></h3>
    <h3><span class="pull-right label label-primary"> @Model.vl_Produto.ToString("c")</span>  </h3>
    @using (Html.BeginForm("Adicionar", "Carrinho"))
    {
        <div class="pull-right">
            @Html.HiddenFor(x => x.id_Produto)
            @Html.Hidden("returnUrl",Request.Url.PathAndQuery)
            <input type="submit" class="btn btn-success" value="Comprar"/>
        </div>
    }
    <h3> <span class="lead"> @Model.ds_Descricao</span> </h3>
</div>

